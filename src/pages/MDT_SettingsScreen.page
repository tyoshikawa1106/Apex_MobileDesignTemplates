<apex:page showHeader="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0" id="page">
    <apex:composition template="MobileDesignTemplete">
    
        <apex:define name="title">
            <apex:outputText value="Mobile Design Templates Apps" />
        </apex:define>
        
        <apex:define name="body">
            <apex:form id="form">
                <div class="app-wrapper">
                    
                    <c:MobileDesignTempletesMenu />
                    <c:MobileDesignTempletesHeader headerTitle="Settings Screen" />
                    
                    <div class="app-content">
                        
                        <form>
                            <div class="list-view-header">
                                <apex:outputText value="Settings Screen" />
                            </div>
                            <section>
                                <div class="content">
                                    <div class="span-66 settings settings-left">
                                        <h3>
                                            <apex:outputText value="Screen Lock" />
                                        </h3>
                                    </div><!-- .span-50 -->
                                    <div class="span-33 settings settings-right">
                                        <div class="form-control-group">
                                            <div class="form-control form-control-toggle" data-on-label="on" data-off-label="off">
                                                <input type="checkbox" name="toggle" />
                                            </div>
                                        </div>
                                    </div><!--.span-50-->
                                </div><!-- .content -->
                            </section>
                            
                            <div class="list-view-header">
                                <apex:outputText value="Lock Screen" />
                            </div>
                            <section class="border-bottom">
                                <div class="content">
                                    <div class="span-66 settings settings-left">
                                        <h3>
                                            <apex:outputText value="Message Notification Preview" />
                                        </h3>
                                    </div><!-- .span-50 -->
                                    <div class="span-33 settings settings-right">
                                        <div class="form-control-group">
                                            <div class="form-control form-control-checkbox">
                                                <input type="checkbox" />
                                            </div>
                                        </div>
                                    </div><!--.span-50-->
                                </div><!-- .content -->
                            </section>
                            
                            <section>
                                <div class="content">
                                    <div class="span-66 settings settings-left">
                                        <h3>
                                            <apex:outputText value="Unlock Music Automatically" />
                                        </h3>
                                        <apex:outputText value="Listen to music stored on your device directly from lock screen" />
                                    </div><!-- .span-50 -->
                                    
                                    <div class="span-33 settings settings-right">
                                        <div class="form-control-group">
                                            <div class="form-control form-control-checkbox">
                                                <input type="checkbox" />
                                            </div>
                                        </div>
                                    </div><!--.span-50-->
                                </div><!-- .content -->
                            </section>
                            
                            <div class="list-view-header">
                                <apex:outputText value="Auto Update" />
                            </div>
                            <section>
                                <div class="content">
                                    <div class="span-66 settings settings-left">
                                        <h3>
                                            <apex:outputText value="Sync over WiFi" />
                                        </h3>
                                    </div><!-- .span-50 -->
                                    
                                    <div class="span-33 settings settings-right">
                                        <div class="form-control-group">
                                            <div class="form-control form-control-toggle" data-on-label="Yes" data-off-label="No">
                                                <input type="checkbox" name="toggle" />
                                            </div>
                                        </div>
                                    </div><!--.span-50-->
                                </div><!-- .content -->
                            </section>
                        
                        </form>
                    </div><!--#app-content-->
                </div><!--#app-wrapper-->
            </apex:form>
        </apex:define>
    </apex:composition>
</apex:page>